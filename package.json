{
  "name": "git-commit-message",
  "displayName": "Git Commit Message",
  "description": "Quickly edit git commit message using a fixed format",
  "repository": "https://github.com/lar-ry/git-commit-message",
  "publisher": "larry-lan",
  "icon": "assets/logo.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "larry-lan.gitCommitMessage",
        "title": "%gitCommitMessage%",
        "icon": "$(pencil)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "larry-lan.gitCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Git Commit Message",
      "properties": {
        "gitCommitMessage.language": {
          "type": "string",
          "description": "%language%",
          "enum": [
            "zh-CN",
            "en-US"
          ],
          "enumDescriptions": [
            "简体中文",
            "English"
          ],
          "default": "zh-CN"
        },
        "gitCommitMessage.template": {
          "type": "array",
          "markdownDescription": "%template%",
          "default": [
            "{% if jiraId %}",
            "{{ type }}[{{ jiraPrefix }}{{ jiraId }}]{{ scope }}: {{ summary }}",
            "{% elif type and scope %}",
            "{{ type }}.{{ scope }}: {{ summary }}",
            "{% elif type or scope %}",
            "{{ type }}{{ scope }}: {{ summary }}",
            "{% else %}",
            "{{ summary }}",
            "{% endif %}",
            "",
            "{{ detail }}",
            "",
            "{% if breakingChange %}",
            "{{ BREAKING_CHANGE }}: {{ breakingChange }}",
            "{% endif %}",
            "",
            "{% if enableJira and jiraUrl and jiraId %}",
            "[{{ jiraPrefix }}{{ jiraId }}]: {{ jiraUrl }}{{ jiraPrefix }}{{ jiraId }}",
            "{% endif %}",
            "",
            "{% for reporter in reporters -%}",
            "{{ Reporter }}: {{ reporter.name }} <{{ reporter.email }}>",
            "{% endfor %}",
            "",
            "{% for reviewer in reviewers -%}",
            "{{ Reviewer }}: {{ reviewer.name }} <{{ reviewer.email }}>",
            "{% endfor %}",
            "",
            "{% if signer.name or signer.email %}",
            "{{ Signer }}: {{ signer.name }} <{{ signer.email }}>",
            "{% endif %}"
          ]
        },
        "gitCommitMessage.customTypes": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              }
            ]
          },
          "markdownDescription": "%customTypes%"
        },
        "gitCommitMessage.enableJira": {
          "type": "boolean",
          "description": "%enableJira%",
          "default": true
        },
        "gitCommitMessage.jiraUrl": {
          "type": "string",
          "markdownDescription": "%jiraUrl%",
          "default": ""
        },
        "gitCommitMessage.jiraPrefix": {
          "type": "string",
          "markdownDescription": "%jiraPrefix%",
          "default": ""
        },
        "gitCommitMessage.reporters": {
          "type": "array",
          "markdownDescription": "%reporters%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%reporters.name%"
              },
              "email": {
                "type": "string",
                "description": "%reporters.email%"
              },
              "picked": {
                "type": "boolean",
                "description": "%picked%"
              }
            },
            "required": [
              "name",
              "email"
            ]
          },
          "default": []
        },
        "gitCommitMessage.reviewers": {
          "type": "array",
          "markdownDescription": "%reviewers%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%reviewers.name%"
              },
              "email": {
                "type": "string",
                "description": "%reviewers.name%"
              },
              "picked": {
                "type": "boolean",
                "description": "%picked%"
              }
            },
            "required": [
              "name",
              "email"
            ]
          },
          "default": []
        },
        "gitCommitMessage.signer.name": {
          "type": "string",
          "description": "%signer.name%",
          "default": ""
        },
        "gitCommitMessage.signer.email": {
          "type": "string",
          "description": "%signer.email%",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/nunjucks": "^3.2.6",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "nunjucks": "^3.2.4"
  }
}